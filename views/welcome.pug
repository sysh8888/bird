extends layout

block content
    header#header
        div.inner
            a.logo(href='/') JsonBird
            nav#nav
                a(href='/') 首页
                a(href='http://jsrun.net/PriKp',target="_blank") 示例
                a(href='#interface') 数据接口
                a(href='https://github.com/xCss/JsonBird/wiki',target="_blank") 接口文档
                a(href='https://github.com/xCss/JsonBird',target="_blank") Github
            a.navPanelToggle(href='#navPanel')
                span.fa.fa-bars
    section#banner
        div.inner
            header
                h1 Welcome to JsonBird
                p 业界领先的远程数据接口代理服务
            div.flex
                div
                    span.icon.fa-bolt
                    h3 Fast
                    p 专业线路，极限速度
                div
                    span.icon.fa-lock
                    h3 Safe
                    p 全站 HTTPS，保证数据安全
                div
                    span.icon.fa-arrows
                    h3 Multiple
                    p 多种接口，自由选择
            footer.flex
                div
                    a.button(href='#interface') 数据接口
                div
                    a.button(href="/v1?url=http://www.bing.com/HPImageArchive.aspx?format=js&idx=1&n=1",target="_blank") 快速开始
    section#wecando.wrapper
        div.inner
            h4 我们能做到:
            ol
                li 让<code>不支持跨域</code>的远程数据接口<code>支持跨域</code>。
                li 让<code>不支持JSONP</code>的远程数据接口<code>支持JSONP</code>(添加参数<code>&callback=cb_name</code>)。
                li 提供专业的<code>HTTPS</code>解决方案，让数据传输更安全(同时解决远程数据接口不支持<code>HTTPS</code>的问题)。
                li 多种数据请求方式与返回格式。
                li 丰富的数据接口 ...
    section#interface.wrapper
        div.inner
            h4 已经实现的数据接口:
            div.table-wrapper
                table.alt
                    thead
                        tr
                            th(width="200") 接口名称
                            th 接口地址
                            th 请求方式
                    tbody
                        tr
                            td 远程代理
                            td https://bird.ioliu.cn/v1
                            td GET/POST
                        tr
                            td 远程代理v2 <br>
                                <code>支持自定义header</code>
                            td https://bird.ioliu.cn/v2 <br>
                                <code><a href="https://github.com/xCss/JsonBird/wiki/%E8%87%AA%E5%AE%9A%E4%B9%89Headers">自定义header请求设置</a></code>
                            td GET/POST
                        tr
                            td 笑话
                            td https://bird.ioliu.cn/joke
                            td GET/POST
                        tr
                            td IP 地址
                            td https://bird.ioliu.cn/ip
                            td GET/POST
                        tr
                            td 天气查询 <br><code>2017/09/03更新</code>
                            td https://bird.ioliu.cn/weather
                            td GET
                        tr
                            td 号码归属地 <br><code>2017/09/03更新</code>
                            td https://bird.ioliu.cn/mobile
                            td GET
                        tr
                            td 网易云音乐<br>(歌曲/歌单)
                            td https://bird.ioliu.cn/netease
                            td GET
            div.comment

    
